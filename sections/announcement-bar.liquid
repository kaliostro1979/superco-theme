<div class="announcement-bar" role="region" {{ block.shopify_attributes }}>
  {%- if section.settings.text != blank -%}
    <h4>{{ section.settings.text }}</h4>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Announcement bar",
  "settings": [
    {
      "id": "text",
      "type": "text",
      "label": "Announcement text"
    }
  ]
}
{% endschema %}
